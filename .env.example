# GitHub App Configuration
# Get these values from your GitHub App settings at https://github.com/settings/apps
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY_PATH=./github-app-private-key.pem
# OR use inline private key (not recommended for production):
# GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END RSA PRIVATE KEY-----"

# Optional: OAuth credentials (only needed for user authentication flows)
GITHUB_APP_CLIENT_ID=Iv1.your_client_id_here
GITHUB_APP_CLIENT_SECRET=your_client_secret_here

# Webhook secret (highly recommended for security)
GITHUB_APP_WEBHOOK_SECRET=your_random_webhook_secret_here

# Gemini AI Configuration
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Review Configuration
MAX_FILES=40
MAX_LINES_PER_FILE=1500

# Server Configuration
PORT=3000

# Polling Configuration (for polling mode)
POLL_INTERVAL=2

# Optional: Debug mode
# DEBUG=true
